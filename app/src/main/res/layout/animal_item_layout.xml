<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/ivImageDisplay"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAnimalDetials"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="UserName" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAnimalDetials"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:text="9986896968" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserName"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Address" />

            <TextView
                android:id="@+id/tvAnimalDetials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAnimalCategory"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Hey the Animals Deatils are as follow " />

            <TextView
                android:id="@+id/tvAnimalCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivImageDisplay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Dog" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>